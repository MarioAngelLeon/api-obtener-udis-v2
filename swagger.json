{
  "swagger": "2.0",
  "info": {
    "description": "This is an api to get udis from banxico",
    "version": "1.0.0",
    "title": "UDIs get API",
    "contact": {
      "email": "j.hernandez@softtek.com"
    }
  },
  "schemes": ["http"],
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "paths": {
    "/credit/{productNumber}": {
      "get": {
        "tags": ["Credit-id"],
        "summary": "get last one available credit id",
        "description": "Method to get last one available credit id by product numeber.",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "productNumber",
            "description": "Product number must be: 304, 900, 310, 305, 601, 602",
            "required": true,
            "schema": {
              "type": "string",
              "example": "304"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/getCreditId"
              }
            }
          },
          "404": {
            "description": "Product number does not found",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/creditIdNotFound"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Credit-id"],
        "summary": "take last one available credit id",
        "description": "Method to take last one available credit id by product numeber.",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "productNumber",
            "description": "Product number must be: 304, 900, 310, 305, 601, 602",
            "required": true,
            "schema": {
              "type": "string",
              "example": "304"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/takeCreditId"
              }
            }
          },
          "404": {
            "description": "Product number does not found",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/creditIdNotFound"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "getCreditId": {
      "type": "object",
      "properties": {
        "msg": { "type": "string", "example": "Id read" },
        "product_number": { "type": "number", "example": 304 },
        "credit_id": { "type": "number", "example": 1700000001 },
        "description": { "type": "string", "example": "Crédito Personal" },
        "info": {
          "type": "object",
          "properties": {
            "code": { "type": "string", "example": "NMP.201" },
            "status": { "type": "string", "example": "CREATED" },
            "message": {
              "type": "string",
              "example": "Se ha realizado correctamente la operación"
            }
          }
        }
      }
    },
    "takeCreditId": {
      "type": "object",
      "properties": {
        "msg": { "type": "string", "example": "Id taked" },
        "product_number": { "type": "number", "example": 304 },
        "credit_id": { "type": "number", "example": 1700000001 },
        "description": { "type": "string", "example": "Crédito Personal" },
        "info": {
          "type": "object",
          "properties": {
            "code": { "type": "string", "example": "NMP.201" },
            "status": { "type": "string", "example": "CREATED" },
            "message": {
              "type": "string",
              "example": "Se ha realizado correctamente la operación"
            }
          }
        }
      }
    },
    "creditIdNotFound": {
      "type": "object",
      "properties": {
        "statusCode": { "type": "string", "example": "MAMBU.001" },
        "message": {
          "type": "string",
          "example": "- Credit Id does not found"
        },
        "description": {
          "type": "string",
          "example": "Error al generar o leer los Ids de crédito"
        }
      }
    }
  }
}
