{
  "swagger": "2.0",
  "info": {
    "description": "This is an api to get udis from banxico",
    "version": "1.0.0",
    "title": "UDIs get API",
    "contact": {
      "email": "j.hernandez@softtek.com"
    }
  },
  "schemes": ["http"],
  "host": "localhost:3001",
  "basePath": "/api/v1",
  "paths": {
    "/udis/{date}": {
      "get": {
        "tags": ["Udi"],
        "summary": "get one udi from BD",
        "description": "Method to get one udi by date",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "description": "Date to search",
            "required": true,
            "schema": {
              "type": "string",
              "example": "2022/08/26"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/getUdi" }
          },
          "400": {
            "description": "Udi bad request",
            "schema": { "$ref": "#/definitions/notValidDate" }
          },
          "404": {
            "description": "Udi not found",
            "schema": { "$ref": "#/definitions/udiNotFound" }
          }
        }
      }
    }
  },
  "definitions": {
    "getUdi": {
      "type": "object",
      "properties": {
        "msg": {
          "type": "string",
          "example": "Udi por fecha encontrada exitosamente"
        },
        "fecha": {
          "type": "string",
          "example": "26/08/2022"
        },
        "dato": {
          "type": "string",
          "example": "7.465516"
        },
        "info": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "example": "NMP.201"
            },
            "status": {
              "type": "string",
              "example": "CREATED"
            },
            "message": {
              "type": "string",
              "example": "Se ha realizado correctamente la operaci√≥n"
            }
          }
        }
      }
    },
    "notValidDate": {
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "string",
          "example": "NMP.400"
        },
        "message": {
          "type": "string",
          "example": "solicitud malformada - El campo date does not match pattern \"/^\\\\d{4}([\\\\-/.])(0?[1-9]|1[1-2])\\\\1(3[01]|[12][0-9]|0?[1-9])$/\" "
        },
        "description": {
          "type": "string",
          "example": "Error en el servidor"
        }
      }
    },
    "udiNotFound": {
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "string",
          "example": "MAMBU.001"
        },
        "message": {
          "type": "object",
          "properties": {
            "msg": {
              "type": "string",
              "example": "No se encontro el valor para la fecha solicitada"
            },
            "date": {
              "type": "string",
              "example": "09/07/2022"
            }
          }
        },
        "description": {
          "type": "string",
          "example": "Error obtener los valores de las UDIs"
        }
      }
    }
  }
}
